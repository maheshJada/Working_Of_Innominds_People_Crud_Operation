@model Working_Of_Innominds_People_Crud_Operation.Models.Employee

<form method="post" asp-action="Delete" autocomplete="off">
    <input asp-for="EmpId" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Employee Data</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmpName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmpName" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="PhoneNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PhoneNumber" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="EmailID"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmailID" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="EmpCategory"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmpCategory" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="EmpLocation"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmpLocation" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Date" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
@section Scripts{

    @{
<partial name="_ValidationScriptsPartial" />
    }

}


