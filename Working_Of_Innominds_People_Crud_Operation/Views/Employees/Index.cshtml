@model IEnumerable<Working_Of_Innominds_People_Crud_Operation.Models.Employee>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Employee
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead class="text-success">
                <tr>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        PhoneNumber
                    </th>
                    <th>
                        EmailID
                    </th>
                    <th>
                        EmpCategory
                    </th>
                    <th>
                        EmpLocation
                    </th>
                    <th>
                        Date
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="70%">@obj.EmpName</td>
                    <td width="50%" >@obj.PhoneNumber</td>
                    <td width="50%">@obj.EmailID</td>
                    <td width="50%">@obj.EmpCategory</td>
                    <td width="50%">@obj.EmpLocation</td>
                    <td width="30%">@obj.Date</td>
                    <td class="text-center">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Employees" asp-route-Id="@obj.EmpId" asp-action="Edit" class="btn btn-primary mx-1">
                                @*Edit*@
                                <i class="fas fa-edit">Edit</i>
                            </a>
                            <a asp-controller="Employees" asp-route-Id="@obj.EmpId" asp-action="Details"  class="btn btn-primary mx-1">
                                @*Details*@
                                <i class="fas fa-info-circle">Details</i>
                            </a>
                            <a asp-controller="Employees" asp-route-Id="@obj.EmpId" asp-action="Delete" class="btn btn-danger mx-1">
                                @*Delete*@
                                <i class="far fa-trash-alt">Delete</i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }

</div>







